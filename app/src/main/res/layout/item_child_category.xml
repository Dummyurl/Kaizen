<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin4dp"
    android:layout_marginTop="@dimen/margin4dp"
    android:background="@color/blue"
    android:orientation="vertical"
    android:padding="@dimen/margin8dp">

    <ImageView
        android:id="@+id/iv_child_category"
        android:layout_width="48dp"
        android:layout_height="48dp" />

    <TextView
        android:id="@+id/tv_child_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin8dp"
        android:layout_marginStart="@dimen/margin8dp"
        android:layout_toEndOf="@+id/iv_child_category"
        android:layout_toRightOf="@+id/iv_child_category"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        tools:text="Sample" />
</RelativeLayout>